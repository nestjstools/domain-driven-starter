{
  "name": "@nestjstools/domain-driven-starter",
  "version": "1.0.0",
  "description": "Standalone starter kit for Domain-Driven Design",
  "author": "Sebastian Iwanczyszyn",
  "private": true,
  "license": "MIT",
  "keywords": [
    "ddd",
    "domain-driven-design",
    "domain-events",
    "aggregate-root",
    "value-object",
    "typescript",
    "microservices"
  ],
  "main": "lib/index.js",
  "files": [
    "lib",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/nestjstools/domain-driven-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nestjstools/domain-driven-starter"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:unit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --config test/jest-unit.json"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.1",
    "@semantic-release/github": "^11.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.5",
    "semantic-release-pr-analyzer": "^1.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
